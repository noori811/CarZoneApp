<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    tools:context=".UserAuthentication.SplashActivity">

    <ImageView
        android:id="@+id/splash_image_view_logo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/splash_cover_height"
        android:layout_marginLeft="@dimen/splash_cover_spacing"
        android:layout_marginTop="@dimen/splash_cover_height"
        android:layout_marginRight="@dimen/splash_cover_spacing"
        android:src="@drawable/logo"
        android:transitionName="logo_image" />

    <TextView
        android:id="@+id/descriptionView"
        style="@style/DefaultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_image_view_logo"
        android:layout_marginStart="@dimen/splash_cover_spacing"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/splash_cover_spacing"
        android:layout_marginBottom="@dimen/splash_cover_spacing"
        android:text="Drive Your Dreams!" />

    <TextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/border"
        android:fontFamily="@font/cooper_font"
        android:text="CarZone"
        android:textAllCaps="true"
        android:textColor="@color/HighlightColor"
        android:textSize="@dimen/text_size_medium"
        android:transitionName="logo_text" />

    <TextView
        android:id="@+id/rightsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/comic_font"
        android:text="Your Destination,Our Wheels â€“ Perfect Together"
        android:textAlignment="center"
        android:textColor="@color/FontColor" />

</RelativeLayout>